{
  "root": true,

  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "extends": [
    "standard",
    "plugin:prettier/recommended"   // turns off all whitespace rules
  ],

  "rules": {
    "semi":   ["error", "always"],                 // custom prefs
    "quotes": ["error", "double", { "avoidEscape": true }],

    "curly":        ["error", "all"],              // real-bug safety nets
    "prefer-const": "warn"
  }
}
